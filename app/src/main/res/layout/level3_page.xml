    </TableLayout>

    <TextView
        android:id="@+id/chronometerText"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="@string/global_timerText"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <Chronometer
        android:id="@+id/chronometerTimer"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textColor="#F8F2AD"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/chronometerText"
        app:layout_constraintEnd_toStartOf="@+id/redealButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chronometerText"
        app:layout_constraintTop_toTopOf="@+id/chronometerText"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/TranslucentLightRed"
        android:text="@string/global_backButtonText"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/chronometerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="01"
        app:layout_constraintStart_toEndOf="@+id/chronometerText"
        app:layout_constraintTop_toTopOf="@+id/chronometerText"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/redealButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/TranslucentLightGreen"
        android:text="@string/global_redealButtonText"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/chronometerText"
        app:layout_constraintEnd_toStartOf="@+id/backButton"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/chronometerText"
        app:layout_constraintTop_toTopOf="@+id/chronometerText"
        app:layout_constraintVertical_bias="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>