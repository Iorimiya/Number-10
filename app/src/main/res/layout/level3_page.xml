<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_pages_background">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="230dp"
        android:layout_height="20dp"
        android:text="Question3:"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:text="@string/global_scoreText"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/questionText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionContent"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="☆ + ☆=10"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText" />

    <TextView
        android:id="@+id/scoreContent"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:textColor="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreText" />

    <Switch
        android:id="@+id/skipSwitch"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:thumb="@color/Transparent"
        android:track="@color/Transparent"
        app:layout_constraintBottom_toBottomOf="@+id/questionContent"
        app:layout_constraintEnd_toEndOf="@+id/questionContent"
        app:layout_constraintStart_toStartOf="@+id/questionContent"
        app:layout_constraintTop_toBottomOf="@+id/questionText" />

    <TableLayout
